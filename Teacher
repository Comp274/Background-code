public class Teacher extends Person
{
	public String teachOne, teachTwo;
	public String department;
	public String officeHours;
	private int random;
	
	public Teacher(String First, String Last, String ID, String Password, int Age, char Gender, String Phone,String Email)
	{
		super(First, Last, ID, Password, Age, Gender, Phone, Email);
		teachOne = "needs enrolled";
		teachTwo = "needs enrolled";
	}
	
	public void department()
	{
		random =(int) (Math.random() * 3 + 1);
		if (random == 0)
		{
			department = "CA";
		}
		else if (random == 1)
		{
			department = "SS";
		}
		else
		{
			department = "AB";
		}
	}
	
	public void Hours()
	{
		random = (int) (Math.random() * 5 + 1);
		
		if(random == 1)
		{
			officeHours = "Monday";
		}
		else if(random == 2)
		{
			officeHours = "Tuesday";
		}
		else if(random == 3)
		{
			officeHours = "Wednesday";
		}
		else if(random == 4)
		{
			officeHours = "Thursday";
		}
		else
		{
			officeHours = "Friday";
		}
	}
}
