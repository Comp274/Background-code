import java.awt.*;

import javax.swing.*;

import java.awt.event.*;

public class GUI extends JFrame
{
	JRadioButton Culinary, Secret, Alcohol, acp, abd, ets, math, lang, sci, hum, hist, eng, hist2, tas, bio, lang2;
	JTextField firstName, lastName,ID, Password, Age, Phone, Email;
	JLabel lblIn, lblOut;
	ButtonGroup fieldgroup, culgroup, secgroup, alcgroup;
	JPanel upper, lower, left, right;
	
	public void GUI()
	{
		//fields of study
		Culinary = new JRadioButton ("CulinaryAstrology");
		Secret = new JRadioButton ("SecretService");
		Alcohol = new JRadioButton ("AlchoholBiology");
		
