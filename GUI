import java.awt.*;
import javax.swing.*;
import java.awt.event.*;

public class ClassProjectGUI extends JFrame
{
	JRadioButton Culinary, Secret, Alchohol, acp, abd, ets, math, lang, sci, hum, hist, eng, hist2, tas, bio, lang2;
	ButtonGroup fieldgroup, culgroup, secgroup, alcgroup;
	JPanel upper, lower, left, right;
	
	public ClassProjectGUI()
	{
		//fields of study
		Culinary = new JRadioButton ("CulinaryAstrology");
		Secret = new JRadioButton ("SecretService");
		Alchohol = new JRadioButton ("AlchoholBiology");
		
		//repeating classes
		math = new JRadioButton("MATH_9001  Math");
		lang = new JRadioButton("LANG_750  Martian Language Arts");
		sci = new JRadioButton("SCI_356  Science");
		
		//classes for culinary
		acp = new JRadioButton("ACP_330  Astrological culinary physics");
		abd = new JRadioButton("ABD_210  Astrological botany and dehydration");
		ets = new JRadioButton("ETS_101  Extraterrestrial sociology");
		
		//classes for secret
		hum = new JRadioButton("HUM_410  Womanizing");
		hist = new JRadioButton("HIST_213  History of the Tactical Turtleneck");
		eng = new JRadioButton("ENG_512  Fort Engineering");
		
		//classes for alchohol
		hist2 = new JRadioButton("HIST_410  History of the Bloody Mary");
		tas = new JRadioButton("TAS_101  Tasting");
		bio = new JRadioButton("BIO_559  Distilling and Brewing");
		lang2 = new JRadioButton("LANG_732  Drunk Language Arts");
		
		RadioButtonHandler bh = new RadioButtonHandler(); //?
		
		Culinary.addItemListener(bh);
		Secret.addItemListener(bh);
		Alchohol.addItemListener(bh);
		
		math.addItemListener(bh);
		lang.addItemListener(bh);
		sci.addItemListener(bh);
		
		acp.addItemListener(bh);
		abd.addItemListener(bh);
		ets.addItemListener(bh);
		
		hum.addItemListener(bh);
		hist.addItemListener(bh);
		eng.addItemListener(bh);
		
		hist2.addItemListener(bh);
		tas.addItemListener(bh);
		bio.addItemListener(bh);
		lang2.addItemListener(bh);
		
		//field and class groups
		fieldgroup = new ButtonGroup();
		culgroup = new ButtonGroup();
		secgroup = new ButtonGroup();
		alcgroup = new ButtonGroup();
		
		//field of study
		fieldgroup.add(Alchohol);
		fieldgroup.add(Culinary);
		fieldgroup.add(Secret);
		
		//classes available in CulinaryAstrology
		culgroup.add(math);
		culgroup.add(lang);
		culgroup.add(sci);
		culgroup.add(acp);
		culgroup.add(abd);
		culgroup.add(ets);
		
		//classes available for SecretService
		secgroup.add(math);
		secgroup.add(lang);
		secgroup.add(sci);
		secgroup.add(hum);
		secgroup.add(hist);
		secgroup.add(eng);
		
		//classes available for AlchoholBiology
		alcgroup.add(math);
		alcgroup.add(lang2);
		alcgroup.add(sci);
		alcgroup.add(hist2);
		alcgroup.add(tas);
		alcgroup.add(bio);
	}
	
	
}
